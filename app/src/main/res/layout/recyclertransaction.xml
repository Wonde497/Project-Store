<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/slash_background"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/transactionnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="transaction number"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--------------------------------------------------"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateandtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagelayout"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/terminalid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="terminalid"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/merchantid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="merchantid"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/cashiername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="cashiername"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/appcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appcode"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/cardnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cardnumber"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/trnstype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Transtype"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/cup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CUP"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/aid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AID"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="balance"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/arpc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ARPC"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/responsecode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responsecode"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/appstatuse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Appstatus"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tvr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TVR"
                android:textColor="#000000"
                android:textSize="20sp" />
            <Button
                android:id="@+id/print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/corner_background"
                android:text="Print"
                android:textStyle="bold"
                android:textColor="@color/globalyellow"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

