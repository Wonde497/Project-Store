<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/slash_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cardImage11"

        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"

        app:cardBackgroundColor="@color/blackgreen2"
        app:cardElevation="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/helpImage1"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:src="@drawable/white_helpdesk_icon_64px"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/helpdetailtitle"
                android:text="How Can We Help You ?"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/nudista_bold"
                android:layout_gravity="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:id="@+id/cardImage"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="70dp">

    <ListView
        android:id="@+id/listview_help"
        android:scrollbars="vertical"
        android:dividerHeight="10.0sp"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


</android.support.v7.widget.CardView>
