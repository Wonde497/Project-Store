<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsc_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/slash_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- include your toolbar layout-->
        <!-- Let's add fragment -->
        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/blackgreen2"
            android:gravity="center"
            android:text="About Global Bank Ethiopia"
            android:textSize="20dp"
            android:fontFamily="@font/nudista_bold"
            android:textColor="@color/white"
             />

        <TextView
            android:id="@+id/logoon"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:fontFamily="@font/panton_bold"
            android:text="We are Global Bank Ethiopia"
            android:textColor="@color/blackgreen2"
            android:textSize="18dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/admin_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="20dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/settingss"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:src="@drawable/about2"
                                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="7dp"
                                android:textAlignment="center"
                                android:text="About US"
                                android:fontFamily="@font/nudista_bold"
                                android:textSize="20dp"
                                android:textColor="@color/blackgreen2"
                                />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/logoon2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/panton_bold"
                            android:text="At Global Bank Ethiopia, we're committed to innovative solutions and top-notch customer service. \nWe stand with our community as trusted partners in their journey to success.\n Our knowledgeable team provides timely and tailored services, empowering customers to achieve their goals."
                            android:textColor="@color/blackgreen2"
                             />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/white"
                            android:src="@drawable/new_gbe_vision"
                            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="7dp"
                            android:textAlignment="center"
                            android:text="OUR VISION"
                           android:fontFamily="@font/nudista_bold"
                            android:textSize="17dp"
                            android:textColor="@color/blackgreen2"
                            />

                    </LinearLayout>
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/panton_bold"
                            android:textAlignment="center"
                            android:text="“To be the first rated East African Bank through operational excellence by 2035”"
                            android:textColor="@color/blackgreen2"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="20dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@color/white"
                            android:src="@drawable/goal2"
                            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="7dp"
                            android:layout_marginLeft="20dp"
                            android:textAlignment="center"
                            android:text="OUR MISSION"
                            android:fontFamily="@font/nudista_bold"
                            android:textSize="17dp"
                            android:textColor="@color/blackgreen2"
                            />


                    </LinearLayout>
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"

                            android:fontFamily="@font/panton_bold"
                            android:textAlignment="center"
                            android:text="Global Bank Ethiopia S.C (GBE) enhances stakeholders’ value by providing excellent banking services to its customers using modern technology, providing competent leadership, and employing capable, disciplined, and satisfied employees through effective recruitment, training, and development."
                            android:textColor="@color/blackgreen2"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="20dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/white"
                            android:src="@drawable/new_gbe_value"
                            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="7dp"
                            android:layout_marginLeft="20dp"
                            android:textAlignment="center"
                            android:text="OUR VALUE"
                           android:fontFamily="@font/nudista_bold"
                            android:textSize="17dp"
                            android:textColor="@color/blackgreen2"
                            />


                    </LinearLayout>

                    <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="10dp"

                            android:fontFamily="@font/panton_bold"

                            android:text=" ✓  A trusted Partner to our Customers\n
✓  Excel in Professionalism\n
✓  Foster Diversity and Teamwork\n
✓  Pursue Learning\n
✓  Care for our Employees\n
✓  Act with Integrity\n
✓  Give back to the community"

                            android:textColor="@color/blackgreen2"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </FrameLayout>


</ScrollView>
    </LinearLayout>
    <!--
         Navigation view to show the menu items
    -->

</android.support.v4.widget.DrawerLayout>