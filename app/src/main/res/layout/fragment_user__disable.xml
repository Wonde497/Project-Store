<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/slash_background"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
       >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/blackgreen2"
        android:background ="@color/blackgreen2"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center_horizontal"
        android:padding="30dp">
        <TextView
            android:id="@+id/tview"
            android:layout_width="321dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Disable User"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/nudista_bold"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:paddingEnd="16dp"
            android:fontFamily="@font/panton_bold"
            android:text="Please enter username that you want to Disable? "
            android:textColor="@color/white"
            android:textSize="16sp" />
    <EditText

        android:id="@+id/Etuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/edittextback"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/white_user_icon_24px"
        android:drawablePadding="10dp"
        android:textColorHint="@color/white"
        android:hint="Please Enter Username"
        android:fontFamily="@font/panton_regular"
        android:inputType="textNoSuggestions"
        android:maxLength="20"
        android:minHeight="48dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178"
        tools:layout_editor_absoluteX="9dp" />

    <Button
        android:id="@+id/idBtndisable"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:background="@drawable/yellowcorner_background"
        android:textColor="@color/blackgreen2"
        android:text="Disable"
        android:fontFamily="@font/nudista_bold"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
    />


    </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>