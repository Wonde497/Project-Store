<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/globankgreen"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailName"
        android:text="Help Detail"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/globankgreen"
        android:textColor="@color/white"
        android:fontFamily="@font/nudista_bold"
        android:layout_gravity="center"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:id="@+id/cardImage"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/blackgreen2"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helpImage1"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:src="@drawable/white_helpdesk_icon_64px"
            android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/helpdetailtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="How Can I Login?"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/panton_bold" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How Can I Login ?"
        android:id="@+id/helpquestion"
        android:textColor="@color/blackgreen2"
        android:fontFamily="@font/nudista_bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow the following  steps to login"
        android:layout_marginStart="10dp"
        android:textColor="@color/blackgreen2"
        android:fontFamily="@font/panton_bold"
        android:textSize="15sp"
        android:id="@+id/helpquestiontext"/>

    <TextView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1:"
        android:textColor="@color/blackgreen2"
        android:fontFamily="@font/nudista_bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill user username and password."
        android:layout_marginStart="10dp"
        android:textColor="@color/blackgreen2"
        android:fontFamily="@font/panton_bold"
        android:textSize="15sp"
        android:id="@+id/step1text"/>

    <TextView
        android:id="@+id/step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2:"
        android:textColor="@color/blackgreen2"
        android:fontFamily="@font/nudista_bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your user type from the drop down menu"
        android:layout_marginStart="10dp"
        android:textColor="@color/blackgreen2"
        android:fontFamily="@font/panton_bold"
        android:textSize="15sp"
        android:id="@+id/step2text"/>
    <TextView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3:"
        android:textColor="@color/blackgreen2"
        android:fontFamily="@font/nudista_bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Login Button"
        android:layout_marginStart="10dp"
        android:textColor="@color/blackgreen2"
        android:fontFamily="@font/panton_bold"
        android:textSize="15sp"
        android:id="@+id/step3text"/>

</LinearLayout>