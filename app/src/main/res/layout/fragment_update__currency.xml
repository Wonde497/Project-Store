<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsc_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slash_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Select Currency Type"
            android:textColor="@color/blackgreen2"
            android:textSize="25dp"
            android:fontFamily="@font/nudista_bold"
             />

        <FrameLayout
            android:id="@+id/currency_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/gridLayout"
                android:rowCount="4"
                android:layout_marginTop="70dp"
                android:columnCount="3"
                android:background="@drawable/gbkborder"
                android:layout_centerHorizontal="true"
                >
            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/blackgreen2"
                android:layout_row="0"
                android:layout_marginLeft="20dp"
                android:layout_column="0"
                android:layout_marginTop="50dp"
                android:layout_margin="8dp"
                android:layout_gravity="top"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">




            <ImageButton
                android:id="@+id/etb"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/blackgreen2"
                android:src="@drawable/white_etb_icon_64px"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETB"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nudista_bold" />
            </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/blackgreen2"
                android:layout_row="0"
                android:layout_marginLeft="10dp"
                android:layout_column="1"
                android:layout_marginTop="50dp"
                android:layout_margin="8dp"
                android:layout_gravity="top"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">


            <ImageButton
                android:id="@+id/usd"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/blackgreen2"
                android:src="@drawable/white_dollar_icon_64px"
                tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nudista_bold" />
            </LinearLayout>
            </android.support.v7.widget.CardView>
            </GridLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="90dp"

                android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/blackgreen2"
                android:layout_row="1"
                android:layout_marginLeft="20dp"
                android:layout_column="0"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_margin="8dp"
                android:layout_gravity="top"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">


            <ImageButton
                android:id="@+id/eur"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/blackgreen2"
                android:layout_gravity="center"
                android:src="@drawable/white_euro_icon_64px"
                tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EURO"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nudista_bold" />

            </LinearLayout>
            </android.support.v7.widget.CardView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>