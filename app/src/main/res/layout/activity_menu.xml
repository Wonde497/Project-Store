<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/slash_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"

        android:layout_height="208dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/advertisement"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:layout_gravity="bottom"
            android:background="@color/blackgreen2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:orientation="horizontal">

                <View
                    android:id="@+id/dot_0"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_focused" />

                <View
                    android:id="@+id/dot_1"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal" />

                <View
                    android:id="@+id/dot_2"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal" />

                <View
                    android:id="@+id/dot_3"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal" />
                <View
                    android:id="@+id/dot_4"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/blackgreen2"/>
    <TextClock
        android:id="@+id/dateandtime"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="-25dp"
        android:text="Date and Time"
        android:format12Hour="dd-MMM-yyyy:hh:mm:ss a"
        android:background="@color/blackgreen2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/panton_bold"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/guide_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/qpay"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/corner_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@color/blackgreen2"
                android:src="@drawable/new_white_transaction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/nudista_bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/qpay_cover"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#70ffffff"
            android:visibility="invisible" />


        <LinearLayout
            android:id="@+id/logon"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/qpay"
            android:layout_alignStart="@id/qpay"
            android:layout_alignEnd="@id/guide_point"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/corner_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white_login_icon128px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:fontFamily="@font/nudista_bold"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/logon_cover"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/qpay"
            android:layout_alignStart="@id/qpay"
            android:layout_alignEnd="@id/guide_point"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="#70ffffff"
            android:gravity="center"
            android:visibility="invisible" />



        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/qpay"
            android:layout_alignStart="@id/guide_point"
            android:layout_alignEnd="@id/qpay"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_background"
            android:gravity="center"
            android:orientation="vertical">
            <!--android:src="@mipmap/setting_logo"-->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white_sale_icon_128px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sale"
                android:fontFamily="@font/nudista_bold"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/setting_cover"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/qpay"
            android:layout_alignStart="@id/guide_point"
            android:layout_alignEnd="@id/qpay"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="#70ffffff"
            android:visibility="invisible" />


        <LinearLayout
            android:id="@+id/cahierlogin"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/logon"
            android:layout_alignStart="@id/qpay"
            android:layout_alignEnd="@id/guide_point"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/corner_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/blackgreen2"
                android:src="@drawable/white_cashier_icon128px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cashier"
                android:fontFamily="@font/nudista_bold"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menuhelp1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/setting"
            android:layout_alignStart="@id/guide_point"
            android:layout_alignEnd="@id/qpay"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/blackgreen2"
                android:src="@drawable/white_helpdesk_icon_128px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:text="Help"
                android:fontFamily="@font/nudista_bold"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/help_cover"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_below="@id/logon"
            android:layout_alignStart="@id/guide_point"
            android:layout_alignEnd="@id/setting"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="176dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/set_cover"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_below="@id/logon"
            android:layout_alignStart="@id/guide_point"
            android:layout_alignEnd="@id/setting"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="176dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:visibility="invisible" />


    </RelativeLayout>
</LinearLayout>