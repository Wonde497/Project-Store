<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slash_background"
    tools:context="com.verifone.demo.emv.terminalfunctions.Terminal_Mode">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Select Terminal Mode"
            android:textColor="@color/blackgreen2"
            android:textSize="25dp"
            android:fontFamily="@font/panton_bold" />

        <FrameLayout
            android:id="@+id/mode_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="5dp"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <!--
                         Horizontal Row1.....................
                    -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gridLayout"
                android:rowCount="4"
                android:layout_gravity="center"
                android:columnCount="3"
                android:layout_marginTop="20dp"
                android:background="@drawable/gbkborder"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/blackgreen2"
                android:layout_row="0"
                android:layout_marginLeft="20dp"
                android:layout_column="0"

                android:layout_margin="8dp"
                android:layout_gravity="top"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">


            <ImageButton
                android:id="@+id/merchant"
                android:layout_width="70dp"
                android:background="@color/blackgreen2"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/white_merchant_icon1_64px"
                tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercahnt Mode"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nudista_bold" />
            </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/blackgreen2"
                android:layout_row="0"
                android:layout_marginLeft="0dp"
                android:layout_column="1"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"                android:layout_margin="8dp"
                android:layout_gravity="top"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">

            <ImageButton
                android:id="@+id/branch"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/white_bank_icon_64px"
                android:background="@color/blackgreen2"
                tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch Mode"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nudista_bold" />
            </LinearLayout>
            </android.support.v7.widget.CardView>
            </GridLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>