<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cashier_drawer_layout"
    android:layout_width="match_parent"
    android:background="@drawable/slash_background"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- include your toolbar layout-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/cashiertoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blackgreen2"
            android:titleTextColor="@color/globalyellow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blackgreen2"
                android:text="Cashier Menu"

                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:textAlignment="center"
                android:fontFamily="@font/nudista_bold" />

        </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/logoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/slash_background"
            android:gravity="center"
            android:text="Logged In User:"
            android:textColor="@color/blackgreen2"
            android:textSize="20dp"
            android:fontFamily="@font/panton_bold"/>
        <!-- Let's add fragment -->
        <FrameLayout
            android:id="@+id/cashier_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/slash_background"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/gridLayout"
                    android:rowCount="5"
                    android:columnCount="2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/gbkborder"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="top"
                        android:layout_margin="8dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/blackgreen2"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/viewinfo"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:background="@color/blackgreen2"
                                android:src="@drawable/white_pos1_icon_64px"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nudista_bold"
                                android:text="View Terminal Info"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/blackgreen2"
                        android:layout_row="0"
                        android:layout_marginLeft="20dp"
                        android:layout_column="1"
                        android:layout_marginTop="20dp"
                        android:layout_margin="8dp"
                        android:layout_gravity="top"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                    <ImageButton
                    android:id="@+id/manualdownload"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                        android:background="@color/blackgreen2"
                    android:src="@drawable/white_set_keys_icon_64px"
                    tools:ignore="SpeakableTextPresentCheck" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/white_download_icon_24px"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Key Download"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nudista_bold" />
                    </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/blackgreen2"
                        android:layout_row="1"
                        android:layout_marginLeft="30dp"
                        android:layout_column="0"
                        android:layout_margin="8dp"
                        android:layout_gravity="top"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                    <ImageButton
                    android:id="@+id/reprint"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                        android:background="@color/blackgreen2"
                    android:layout_gravity="center"
                    android:src="@drawable/white_reprint_icon_64px"
                    tools:ignore="SpeakableTextPresentCheck" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reprint"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nudista_bold" />
                    </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/blackgreen2"
                        android:layout_row="1"
                        android:layout_marginLeft="20dp"
                        android:layout_column="1"
                        android:layout_margin="8dp"
                        android:layout_gravity="top"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                    <ImageButton
                    android:id="@+id/detailreport"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                        android:background="@color/blackgreen2"
                    android:src="@drawable/white_detail_report_icon_64px"
                    tools:ignore="SpeakableTextPresentCheck" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Report"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nudista_bold" />
                    </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/blackgreen2"
                        android:layout_row="2"
                        android:layout_marginLeft="30dp"
                        android:layout_column="0"
                        android:layout_margin="8dp"
                        android:layout_gravity="top"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                    <ImageButton
                    android:id="@+id/sumreport"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                        android:background="@color/blackgreen2"
                    android:layout_gravity="center"
                    android:src="@drawable/white_deatail_report_icon_64px"
                    tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Summary Report"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nudista_bold" />
                    </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/blackgreen2"
                        android:layout_row="2"
                        android:layout_marginLeft="20dp"
                        android:layout_column="1"
                        android:layout_margin="8dp"
                        android:layout_gravity="top"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                    <ImageButton
                    android:id="@+id/changecashierpin"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                        android:background="@color/blackgreen2"
                    android:src="@drawable/white_pinchange_icon_64px"
                    tools:ignore="SpeakableTextPresentCheck" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change My PIN"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nudista_bold" />
                    </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="126dp"
                        android:layout_height="100dp"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_gravity="top"
                        android:layout_margin="8dp"
                        android:layout_marginLeft="30dp"
                        app:cardBackgroundColor="@color/blackgreen2"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/timeout"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:background="@color/blackgreen2"
                                android:src="@drawable/white_reset_timeout_icon_64px"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reset Timeout"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:fontFamily="@font/nudista_bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/blackgreen2"
                        android:layout_row="3"
                        android:layout_marginLeft="20dp"
                        android:layout_column="1"
                        android:layout_margin="8dp"
                        android:layout_gravity="top"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <ImageButton
                            android:id="@+id/settle"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/blackgreen2"
                            android:src="@drawable/settelment_icon_new2"
                            tools:ignore="SpeakableTextPresentCheck" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settle_txn"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nudista_bold" />
                    </LinearLayout>
                    </android.support.v7.widget.CardView>
                </GridLayout>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
    <!--
         Navigation view to show the menu items
    -->

    <android.support.design.widget.NavigationView
        android:id="@+id/cashiernavigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemTextColor="@color/blackgreen2"
        app:iconTint="@color/blackgreen2"
        app:theme="@style/AppTheme.NavigationView"
        android:background="@drawable/slash_background2" />


</android.support.v4.widget.DrawerLayout>