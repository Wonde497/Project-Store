<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/slash_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
      >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@color/blackgreen2"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/tview"
                    android:layout_width="321dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:text="Enable User"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:fontFamily="@font/nudista_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.053" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:paddingEnd="16dp"
                    android:fontFamily="@font/panton_bold"
                    android:text="Please enter username that you want to enable? "
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <EditText

                    android:id="@+id/Etuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittextback"
                    android:drawableLeft="@drawable/white_user_icon_24px"
                    android:drawablePadding="10dp"
                    android:hint="Please Enter Username"
                    android:inputType="textNoSuggestions"
                    android:maxLength="20"
                    android:fontFamily="@font/panton_bold"
                    android:minHeight="48dp"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.178"
                    tools:layout_editor_absoluteX="9dp" />

                <Button
                    android:id="@+id/idBtnenable"
                    android:layout_width="120dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/yellowcorner_background"
                    android:text="Enable"
                    android:fontFamily="@font/nudista_bold"
                    android:textAlignment="center"
                    android:textColor="@color/blackgreen2"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>