<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/slash_background"

    android:weightSum="1">

    <include
        android:id="@+id/read_card_setup_bar"
        layout="@layout/trans_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/readcard_amttitle_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="100sp"
            android:text="Amount"
            android:fontFamily="@font/nudista_bold"
            android:textColor="@color/blackgreen2"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/purchase_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/blackgreen2"
            android:textSize="24sp"
            android:fontFamily="@font/panton_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <TextView
            android:id="@+id/readcard_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="45dip"
            android:layout_marginTop="20dip"
            android:text="Card No."
            android:fontFamily="@font/nudista_bold"
            android:textColor="@color/blackgreen2"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/read_cardno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="right"
            android:textStyle="bold"
            android:textColorHint="@color/blackgreen2"
            android:hint="Tap/Swipe/Insert card"
            android:inputType="number"
            android:maxLength="23"
            android:maxLines="1"
            android:fontFamily="@font/panton_bold"
            android:textColor="@color/blackgreen2"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="60dp"
        android:background="@drawable/corner_background"
        android:gravity="center"
        android:text="Confirm"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/nudista_bold"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="30dip"
        android:textColor="@color/globalyellow"
        android:text="Tap/Swipe/Insert card"
        android:textSize="23sp"
        android:visibility="gone"/>

</LinearLayout>
