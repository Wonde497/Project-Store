<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsc_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/slash_background">


        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/blackgreen2"
            android:gravity="center"
            android:text="MORE REPORT"
            android:textColor="@color/globalyellow"
            android:textSize="20dp"
            android:textStyle="bold"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:titleTextColor="#FFF" />

        <FrameLayout
            android:id="@+id/morereport_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/slash_background"            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


            <ImageButton
                android:id="@+id/sale"
                android:layout_width="142dp"
                android:layout_height="140dp"
                android:layout_gravity="center|top"
                android:src="@drawable/sale"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/void1"
                android:layout_width="147dp"
                android:layout_height="157dp"
                android:layout_gravity="center|left"
                android:src="@drawable/vid"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/cashadv"
                android:layout_width="142dp"
                android:layout_height="145dp"
                android:layout_gravity="center|right"
                android:src="@drawable/cashadvance"
                tools:ignore="SpeakableTextPresentCheck" />


        </FrameLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>