<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manage_Trans_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/slash_background"
        android:orientation="vertical">
        <!-- include your toolbar layout-->
        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/blackgreen2"
            android:gravity="center"
            android:text="Manage Transactions"
            android:textSize="25dp"
            android:fontFamily="@font/nudista_bold"
            android:textColor="@color/white"
            />

        <!-- Let's add fragment -->

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="10dp"

            app:cardElevation="15dp"
            app:contentPadding="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Balance INQ"
                android:textSize="18sp"
                android:fontFamily="@font/panton_bold"
                android:textColor="@color/white"
                android:layout_gravity="left|center"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/balanceinq"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:showText="false"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="10dp"

            app:cardElevation="15dp"
            app:contentPadding="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Deposit"
                android:textSize="18sp"
                android:fontFamily="@font/panton_bold"
                android:textColor="@color/white"
                android:layout_gravity="left|center"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/deposit"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:showText="false"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track"
                />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            app:contentPadding="2dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Manual Card Entry"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_gravity="left|center"
                    android:textAlignment="center"
                    android:fontFamily="@font/panton_bold"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/manualcardentry"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    app:showText="false"
                    android:thumb="@drawable/custom_thumb"
                    app:track="@drawable/custom_track"
                     />
            </FrameLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="10dp"

            app:cardElevation="15dp"

            app:contentPadding="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Phone authorization"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="left|center"
                android:textAlignment="center"
                android:fontFamily="@font/panton_bold"/>


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/Phone"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:showText="false"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="10dp"


            app:cardElevation="15dp"
            app:contentPadding="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Pre-Auth"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="left|center"
                android:textAlignment="center"
                android:fontFamily="@font/panton_bold"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/pre_auth"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:showText="false"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            app:contentPadding="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Pre-Auth Completion"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="left|center"
                android:textAlignment="center"
                android:fontFamily="@font/panton_bold"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/pre_authcmp"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:showText="false"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track"
                />

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="10dp"

            app:cardElevation="15dp"
            app:contentPadding="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Purchase/Cash Back"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="left|center"
                android:textAlignment="center"
                android:fontFamily="@font/panton_bold"/>
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/purchasecashback"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:showText="false"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track"
                />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/blackgreen2"
            app:cardCornerRadius="10dp"

            app:cardElevation="15dp"
            app:contentPadding="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Refund"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/panton_bold"
                android:layout_gravity="left|center"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/refund"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:showText="false"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track"
                />

        </android.support.v7.widget.CardView>


    </LinearLayout>
</android.support.v4.widget.DrawerLayout>