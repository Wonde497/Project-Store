<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verifone.demo.emv.SettingsActivity"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/settings_bar"
        layout="@layout/settings_title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:id="@+id/demo_setting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo Settings"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="10dp"
                />
            <LinearLayout
                android:id="@+id/demo_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/demo_setting_title"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ToggleButton
                        android:id="@+id/toggleOffline"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ToggleButton"
                        android:textOff="Offline"
                        android:layout_weight="1"
                        android:textOn="Online"
                        android:layout_margin="10dp"
                        android:textAllCaps="false"
                        />
                    <ToggleButton
                        android:id="@+id/toggleScanBorder"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textOff="No Scan Border"
                        android:textOn="Show Scan Border"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textAllCaps="false"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check Card Type: "
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        />
                    <CheckBox
                        android:id="@+id/cb_tap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        />
                    <CheckBox
                        android:id="@+id/cb_insert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insert"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        />
                    <CheckBox
                        android:id="@+id/cb_swipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swipe"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_set_params_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_params_title"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/demo_settings"
                android:paddingStart="10dp"
                />

            <include layout="@layout/set_params" />

            <TextView
                android:id="@+id/tv_host_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect to Simulator Host"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/set_params"
                android:paddingStart="10dp"
                />
            <include layout="@layout/simulator_host_setting" />

            <TextView
                android:id="@+id/tv_pinpad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pinpad Test"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/simulator_host_setting"
                android:paddingStart="10dp"
                />
            <LinearLayout
                android:id="@+id/pinpad_test"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_pinpad_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/btnCustomPinpad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Customview Pinpad"
                    android:background="@drawable/shape_corner_qpay"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/btnPinPad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kernel Pinpad"
                    android:background="@drawable/shape_corner_qpay"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pinpad_test_1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/pinpad_test"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/btnTestPinpad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Test Pinpad"
                    android:background="@drawable/shape_corner_qpay"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/btnPinPadEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:background="@drawable/shape_corner_qpay"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_other_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Test"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/pinpad_test_1"
                android:paddingStart="10dp"
                />
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_other_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnCheckCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test"
                        android:background="@drawable/shape_corner_qpay"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_margin="3dp"/>

                    <Button
                        android:id="@+id/btnPrint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Print"
                        android:background="@drawable/shape_corner_qpay"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_margin="3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test(reDefine-AID)"
                        android:background="@drawable/shape_corner_qpay"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_margin="3dp"/>
                    <Button
                        android:id="@+id/btnShowSerial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SerialPort"
                        android:background="@drawable/shape_corner_qpay"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_margin="3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnTestSSL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test SSL"
                        android:background="@drawable/shape_corner_qpay"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_margin="3dp"/>
                    <Button
                        android:id="@+id/btnDeviceInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Device Info"
                        android:background="@drawable/shape_corner_qpay"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_margin="3dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>
