<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsc_drawer_layout1"
    android:layout_width="match_parent"
    android:background = "@drawable/slash_background"
    android:layout_height="match_parent"
    tools:context="example.javatpoint.com.alarmmanager.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blackgreen2"
            android:fontFamily="@font/nudista_bold"
            android:gravity="center"
            android:text="SETTLEMENT TIME"
            android:textSize="23dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/blackgreen2"
            android:gravity="center"
            android:fontFamily="@font/nudista_bold"
            android:text="Enter Settlement Time"
            android:textSize="21dp"

            android:theme="@style/ThemeOverlay.AppCompat.Dark" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/blackgreen2"
            android:gravity="center"
            android:fontFamily="@font/panton_bold"
            android:text="24 Hours Format"
            android:textSize="20dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <FrameLayout
            android:id="@+id/updatebasescreen1_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/Tvsettlment"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginTop="150dp"
                android:background="@drawable/edittextback"
                android:fontFamily="@font/panton_bold"
                android:gravity="center"
                android:hint="hh:mm:ss"
                android:inputType="textNoSuggestions"
                android:maxLength="8"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25sp"

                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.178"
                tools:layout_editor_absoluteX="9dp" />

            <Button
                android:id="@+id/picktime"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/corner_background"
                android:fontFamily="serif"
                android:gravity="center"
                android:hint="Pick Time"
                android:maxLength="8"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.178"
                tools:layout_editor_absoluteX="9dp" />

            <Button
                android:id="@+id/idBtnset"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="300dp"
                android:background="@drawable/corner_background"
                android:fontFamily="@font/nudista_bold"
                android:text="Set"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


        </FrameLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>