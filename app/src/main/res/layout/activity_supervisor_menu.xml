<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/supervisor_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slash_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- include your toolbar layout-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/suppervisortoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blackgreen2"
            android:titleTextColor="@color/globalyellow"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nudista_bold"
            android:gravity="center"
            android:text="Supervisor Menu"
            android:background="@color/blackgreen2"
     />
        </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/logoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/slash_background"
            android:gravity="center"
            android:fontFamily="@font/panton_bold"
            android:text="Logged In User:  "
            android:textColor="@color/blackgreen2"
            android:textSize="20dp" />
        <!-- Let's add fragment -->
        <FrameLayout
            android:id="@+id/supervisor_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:background="@drawable/slash_background"
                android:paddingLeft="5dp"

                android:paddingRight="5dp"
                android:paddingBottom="5dp">
            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                    <GridLayout
                        android:id="@+id/gridLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/gbkborder"
                        android:columnCount="3"
                        android:rowCount="5">

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">


                                <ImageButton
                                    android:id="@+id/manualcardentry"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_manual_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Manual Card Entry"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="15dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/keydownload"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_set_keys_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/white_download_icon_24px"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="-20dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Key Download"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="20dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/reprint"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_reprint_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reprint"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="15dp"

                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/setkeys"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_set_keys_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Set Keys"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="20dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/detailreport"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_detail_report_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Detail Report"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="15dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/sumreport"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_deatail_report_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Summary Report"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:layout_gravity="top"
                            android:layout_marginBottom="30dp"

                            android:layout_margin="5dp"
                            android:layout_marginLeft="20dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/endoffday"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_daily_report_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="End of Day"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"

                            android:layout_marginLeft="20dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/resettimeout"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_reset_timeout_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reset Time Out"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                        <!--
                         Horizontal.Row3....................
                 -->

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/manageusers"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@color/blackgreen2"
                                    android:src="@drawable/white_manageuser_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Manage Cashier"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            app:cardBackgroundColor="@color/blackgreen2"
                            android:layout_row="4"
                            android:layout_marginLeft="15dp"
                            android:layout_column="1"
                            android:layout_margin="5dp"
                            android:layout_gravity="top"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center_vertical|center_horizontal">

                                <ImageButton
                                    android:id="@+id/supervisormainhelp"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:background="@color/blackgreen2"
                                    android:layout_gravity="bottom|right"
                                    android:src="@drawable/white_helpdesk_icon_64px"
                                    tools:ignore="SpeakableTextPresentCheck" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Help"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/nudista_bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </GridLayout>
            </FrameLayout>
        </FrameLayout>

    </LinearLayout>
    <!--
         Navigation view to show the menu items
    -->

    <android.support.design.widget.NavigationView
        android:id="@+id/suppervisornavigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemTextColor="@color/blackgreen2"
        app:iconTint="@color/blackgreen2"
        app:theme="@style/AppTheme.NavigationView"
        android:background="@drawable/slash_background2" />

</android.support.v4.widget.DrawerLayout>