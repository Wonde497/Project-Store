<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsc_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slash_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center_horizontal"
            android:padding="17dp"
            >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:cardCornerRadius="30dp"

            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/blackgreen2"
            android:background ="@color/blackgreen2"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center_horizontal"
            android:padding="25dp"
            >

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="REGISTER TERMINAL ID"
            android:textSize="25dp"
            android:fontFamily="@font/nudista_bold"
            android:textColor="@color/white"/>



                <EditText

                    android:id="@+id/Tvregterminalid"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittextback"
                    android:drawableLeft="@drawable/white_id_icon_64px"
                    android:drawablePadding="10dp"
                    android:hint="Enter Terminal ID"
                    android:inputType="textNoSuggestions"
                    android:minHeight="48dp"
                    android:padding="17dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/panton_bold"
                     />

                <Button
                    android:id="@+id/idBtnregterminalid"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/yellowcorner_background"
                    android:text="Register"
                    android:textColor="@color/blackgreen2"
                    android:textSize="17sp"
                    android:fontFamily="@font/nudista_bold" />


        </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>