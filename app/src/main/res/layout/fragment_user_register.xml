<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slash_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/blackgreen2"
            android:background ="@color/blackgreen2"

           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register Administrator"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nudista_bold"
                    android:textSize="25sp"
                    android:layout_marginBottom="15dp"

                    />

                <EditText
                    android:id="@+id/idaddusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittextback"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/white_user_icon_24px"
                    android:drawablePadding="20dp"
                    android:hint="Enter User Name"
                    android:fontFamily="@font/panton_bold"
                    android:inputType="textNoSuggestions"
                    android:padding="17dp"
                    android:textStyle="bold"
                    android:textColorHighlight="#F9F5F5"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/idadduserpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittextback"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/white_lock_icon_24px"
                    android:drawablePadding="20dp"
                    android:hint="Enter Password"
                    android:fontFamily="@font/panton_bold"
                    android:inputType="numberPassword"
                    android:textStyle="bold"
                    android:padding="17dp"
                    android:textSize="18sp"
                    />
                <EditText
                    android:id="@+id/idconfirmuserpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittextback"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/white_lock_icon_24px"
                    android:drawablePadding="20dp"
                    android:hint="Confirm Password"
                    android:inputType="numberPassword"
                    android:textStyle="bold"
                    android:padding="17dp"
                    android:textSize="18sp"
                    />

                <Button
                    android:id="@+id/idBtnAdduser"
                    android:layout_width="120dp"
                    android:layout_height="53dp"
                    android:text="Register"
                    android:fontFamily="@font/nudista_bold"
                    android:layout_gravity="center"
                    android:background="@drawable/yellowcorner_background"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/blackgreen2"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>