<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verifone.demo.emv.terminalfunctions.reprint">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="REPRINT"
            android:textColor="@color/blackgreen2"
            android:textSize="20dp"
            android:fontFamily="@font/nudista_bold"
            android:textStyle="bold"
           />

        <FrameLayout
            android:id="@+id/reprint_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <!--
                         Horizontal Row1.....................
                    -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gbkborder"
                android:columnCount="2"

                android:rowCount="2">

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="top"
                android:layout_margin="8dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="@color/blackgreen2"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">



                <ImageButton
                android:id="@+id/lastrep"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@color/blackgreen2"
                android:layout_gravity="center|top"
                android:src="@drawable/reprint_last_receipt"
                tools:ignore="SpeakableTextPresentCheck" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Print Last Receipt"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/nudista_bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="top"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/blackgreen2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                    <ImageButton
                android:id="@+id/specficrep"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                        android:background="@color/blackgreen2"
                android:src="@drawable/reprint_specific_receipt"
                tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Specific Receipt"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/nudista_bold" />
    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>