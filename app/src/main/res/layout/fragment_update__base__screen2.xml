<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsc_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slash_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
         >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/blackgreen2"
            android:background ="@color/blackgreen2"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center_horizontal"
            android:padding="15dp">


        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="Update Merchant ID"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/nudista_bold" />

        <FrameLayout
            android:id="@+id/updatebasescreen2_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/currentmid"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"

                android:drawablePadding="10dp"
                android:text="Current MID"
                android:textColor="@color/white"
                android:textSize="17sp"
               android:fontFamily="@font/panton_bold" />

            <EditText

                android:id="@+id/Tvupdatemerchantid"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"

                android:drawableLeft="@drawable/white_id_icon_64px"
                android:background="@drawable/edittextback"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:hint="Enter Merchant ID"
                android:inputType="textNoSuggestions"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:fontFamily="@font/panton_bold"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.178"
                tools:layout_editor_absoluteX="9dp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_height="wrap_content">

            <Button
                android:id="@+id/idBtnupdatemerchantid"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/yellowcorner_background"
                android:text="Update"
                android:textColor="@color/blackgreen2"
                android:textSize="16sp"
                android:fontFamily="@font/nudista_bold" />

            <Button
                android:id="@+id/idBtncancel"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/yellowcorner_background"
                android:text="Skip"
                android:textColor="@color/blackgreen2"
                android:textSize="16sp"
                android:fontFamily="@font/nudista_bold" />
            </RelativeLayout>

        </FrameLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>