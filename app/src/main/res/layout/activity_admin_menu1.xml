<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsc_drawer_layout"
    android:layout_width="match_parent"
    android:background="@drawable/slash_background"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=". MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- include your toolbar layout-->
        <!--Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="logeout" /-->
        <!-- Toolbar for ActionBar -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarplus"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blackgreen2"
            android:titleTextColor="@color/globalyellow"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Add your drawable left icon -->
                <!-- Add your custom text -->
                <TextView
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/nudista_bold"
                    android:text="Admin Menu"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="23sp" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/logoon"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/nudista_bold"
            android:text="Logged In User: "
            android:textColor="@color/blackgreen2"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/introTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, Admin!"
            android:textSize="18sp"
            android:fontFamily="@font/panton_bold"
            android:textColor="@color/blackgreen2"
            android:textAlignment="center"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/adminDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage transactions, support, and security for Global Bank  POS system. Your role ensures efficiency and safety. Proceed with care and adhere to security protocols."
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="@font/panton_regular"
            android:textColor="@color/blackgreen2"
            android:textAlignment="center"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"/>




        <FrameLayout
            android:id="@+id/admin_frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:titleTextColor="#FFF" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gridLayout"
                android:rowCount="3"

                android:columnCount="3"
                android:background="@drawable/gbkborder"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@color/blackgreen2"
                    android:layout_row="1"
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_margin="8dp"
                    android:layout_gravity="top"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">




                        <ImageButton
                            android:id="@+id/recieve"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/white_key_icon_64px" />

                        <TextView
                            android:id="@+id/changetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receive Key"
                            android:fontFamily="@font/nudista_bold"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@color/blackgreen2"
                    android:layout_row="0"
                    android:layout_marginLeft="10dp"
                    android:layout_column="1"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/managetrans"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"

                            android:background="@color/blackgreen2"
                            android:src="@drawable/white_manage_transaction_icon_64px"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nudista_bold"
                            android:text="Manage Transaction"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@color/blackgreen2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">



                        <ImageButton
                            android:id="@+id/settingss"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/blackgreen2"
                            android:src="@drawable/white_manageuser_icon_64px"
                            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Supports"
                            android:fontFamily="@font/nudista_bold"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@color/blackgreen2"
                    android:layout_row="1"
                    android:layout_marginLeft="10dp"
                    android:layout_column="1"

                    android:layout_margin="8dp"
                    android:layout_gravity="top"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">


                        <ImageButton
                            android:id="@+id/directorylist"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@color/blackgreen2"
                            android:src="@drawable/white_directory_list_icon_64px"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Directory List"
                            android:fontFamily="@font/nudista_bold"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                             />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="70dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    app:cardBackgroundColor="@color/blackgreen2"
                    android:layout_row="3"
                    android:layout_marginLeft="20dp"
                    android:layout_column="1"
                    android:layout_margin="8dp"
                    android:layout_gravity="top"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <ImageButton
                            android:id="@+id/adminmenuhelp"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@color/blackgreen2"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/white_helpdesk_icon_64px"
                            tools:ignore="SpeakableTextPresentCheck" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help"
                            android:fontFamily="@font/nudista_bold"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                           />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <!--
         Navigation view to show the menu items
    -->


    <!-- NavigationView for the drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_viewplus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemTextColor="@color/blackgreen2"
        app:iconTint="@color/blackgreen2"
        app:theme="@style/AppTheme.NavigationView"
        android:background="@drawable/slash_background2" />
</android.support.v4.widget.DrawerLayout>