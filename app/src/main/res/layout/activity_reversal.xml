<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slash_background"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--android:background="#E0E0E0"-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input Your Approval Code"
                android:textColor="@color/blackgreen2"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textSize="23dp"
                android:fontFamily="@font/nudista_bold"/>


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blackgreen2"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                >



                <EditText
                    android:id="@+id/inputsearch"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:hint="Search by approval code"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:fontFamily="@font/nudista_bold"
                    android:textColor="@color/white"
                    android:background="@drawable/edittextback"
                    android:textColorHint="@color/white" />

                <Button
                    android:id="@+id/search"
                    android:layout_width="35dp"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:layout_weight="1"

                    android:background="@drawable/search_icon" />

            </LinearLayout>





        </FrameLayout>
    </LinearLayout>
</RelativeLayout>