<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsc_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/slash_background"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- include your toolbar layout-->

        <!-- Let's add fragment -->
        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/blackgreen2"
            android:gravity="center"
            android:text="Manage Support Menu"
            android:textSize="20dp"
            android:fontFamily="@font/nudista_bold"
            android:textColor="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:titleTextColor="#FFF" />

        <TextView
            android:id="@+id/logoon"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Logged In User:  "
            android:textColor="@color/blackgreen2"
            android:fontFamily="@font/panton_bold"
            android:textSize="18dp" />


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/admin_fragment">
        <FrameLayout
            android:id="@+id/admin_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="5dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_container"/>
          <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

              <GridLayout
                  android:id="@+id/gridLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:background="@drawable/gbkborder"
                  android:columnCount="3"

                  android:rowCount="4">

                  <android.support.v7.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="100dp"
                      android:layout_row="0"
                      android:layout_column="0"
                      android:layout_gravity="top"
                      android:layout_margin="8dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="20dp"
                      app:cardBackgroundColor="@color/blackgreen2"
                      app:cardCornerRadius="20dp"
                      app:cardElevation="10dp">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:gravity="center"
                          android:orientation="vertical">


                          <ImageButton
                              android:id="@+id/regsupp"
                              android:layout_width="64dp"
                              android:layout_height="64dp"
                              android:layout_gravity="center"
                              android:background="@color/blackgreen2"
                              android:src="@drawable/white_add_user_icon_64px"
                              tools:ignore="SpeakableTextPresentCheck" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/nudista_bold"
                              android:text="Add Support"
                              android:textAlignment="center"
                              android:textColor="@color/white" />
                      </LinearLayout>
                  </android.support.v7.widget.CardView>


                  <android.support.v7.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="100dp"
                      android:layout_row="0"
                      android:layout_column="1"
                      android:layout_gravity="top"
                      android:layout_margin="8dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="20dp"
                      app:cardBackgroundColor="@color/blackgreen2"
                      app:cardCornerRadius="20dp"
                      app:cardElevation="10dp">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:gravity="center"
                          android:orientation="vertical">

                          <ImageButton
                              android:id="@+id/viewsupp"
                              android:layout_width="70dp"
                              android:layout_height="70dp"
                              android:layout_gravity="center"
                              android:background="@color/blackgreen2"
                              android:src="@drawable/white_view_user_icon_64px"
                              tools:ignore="SpeakableTextPresentCheck" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/nudista_bold"
                              android:text="View Support"
                              android:textAlignment="center"
                              android:textColor="@color/white" />
                      </LinearLayout>
                  </android.support.v7.widget.CardView>

                  <android.support.v7.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="100dp"
                      android:layout_row="1"
                      android:layout_column="0"
                      android:layout_gravity="bottom"
                      android:layout_margin="8dp"
                      android:layout_marginLeft="20dp"
                      app:cardBackgroundColor="@color/blackgreen2"
                      app:cardCornerRadius="20dp"
                      app:cardElevation="10dp">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:gravity="center"
                          android:orientation="vertical">


                          <ImageButton
                              android:id="@+id/ensupp"
                              android:layout_width="70dp"
                              android:layout_height="70dp"
                              android:layout_gravity="center"
                              android:background="@color/blackgreen2"
                              android:src="@drawable/white_enable_user_icon_64px" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/nudista_bold"
                              android:text="Enable Support"
                              android:textAlignment="center"
                              android:textColor="@color/white" />
                      </LinearLayout>
                  </android.support.v7.widget.CardView>

                  <android.support.v7.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="100dp"
                      android:layout_row="3"
                      android:layout_column="0"
                      android:layout_gravity="top"
                      android:layout_marginBottom="20dp"
                      android:layout_margin="8dp"
                      android:layout_marginLeft="20dp"
                      app:cardBackgroundColor="@color/blackgreen2"
                      app:cardCornerRadius="20dp"
                      app:cardElevation="10dp">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:gravity="center"

                          android:orientation="vertical">

                          <ImageButton
                              android:id="@+id/changesupppin"
                              android:layout_width="64dp"
                              android:layout_height="64dp"
                              android:layout_gravity="center"
                              android:background="@color/blackgreen2"
                              android:src="@drawable/white_pinchange_icon_64px"
                              tools:ignore="SpeakableTextPresentCheck" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/nudista_bold"
                              android:text="Change\nSupport PIN"
                              android:textAlignment="center"
                              android:textColor="@color/white" />

                      </LinearLayout>
                  </android.support.v7.widget.CardView>

                  <android.support.v7.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="100dp"
                      android:layout_row="1"
                      android:layout_column="1"
                      android:layout_gravity="top"
                      android:layout_margin="8dp"
                      android:layout_marginLeft="20dp"
                      app:cardBackgroundColor="@color/blackgreen2"
                      app:cardCornerRadius="20dp"
                      app:cardElevation="10dp">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:gravity="center"
                          android:orientation="vertical">

                          <ImageButton
                              android:id="@+id/dissupp"
                              android:layout_width="64dp"
                              android:layout_height="64dp"
                              android:layout_gravity="center"
                              android:background="@color/blackgreen2"
                              android:src="@drawable/white_disable_user_icon_64px"
                              tools:ignore="SpeakableTextPresentCheck" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/nudista_bold"
                              android:text="Disable Support"
                              android:textAlignment="center"
                              android:textColor="@color/white" />

                      </LinearLayout>
                  </android.support.v7.widget.CardView>

                  <android.support.v7.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="100dp"
                      android:layout_row="2"
                      android:layout_column="1"
                      android:layout_gravity="bottom"
                      android:layout_margin="8dp"
                      android:layout_marginLeft="20dp"
                      app:cardBackgroundColor="@color/blackgreen2"
                      app:cardCornerRadius="20dp"
                      app:cardElevation="10dp">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:gravity="center"
                          android:orientation="vertical">

                          <ImageButton
                              android:id="@+id/changeadminpin"
                              android:layout_width="64dp"
                              android:layout_height="64dp"
                              android:layout_gravity="center"
                              android:background="@color/blackgreen2"
                              android:src="@drawable/white_pinchange_icon_64px"
                              tools:ignore="SpeakableTextPresentCheck" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/nudista_bold"
                              android:text="Change My PIN"
                              android:textAlignment="center"
                              android:textColor="@color/white" />
                      </LinearLayout>
                  </android.support.v7.widget.CardView>

                  <android.support.v7.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="100dp"
                      android:layout_row="2"
                      android:layout_column="0"
                      android:layout_gravity="top"
                      android:layout_margin="8dp"
                      android:layout_marginLeft="20dp"
                      app:cardBackgroundColor="@color/blackgreen2"
                      app:cardCornerRadius="20dp"
                      app:cardElevation="10dp">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:gravity="center"
                          android:orientation="vertical">

                          <ImageButton
                              android:id="@+id/delsupp"
                              android:layout_width="64dp"
                              android:layout_height="64dp"
                              android:layout_gravity="center"
                              android:background="@color/blackgreen2"
                              android:src="@drawable/white_delete_icon_64px"
                              tools:ignore="SpeakableTextPresentCheck" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/nudista_bold"
                              android:text="Delete Support"
                              android:textAlignment="center"
                              android:textColor="@color/white" />
                      </LinearLayout>
                  </android.support.v7.widget.CardView>

                  <android.support.v7.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="100dp"
                      android:layout_row="3"
                      android:layout_column="1"
                      android:layout_gravity="top"
                      android:layout_margin="8dp"
                      android:layout_marginLeft="20dp"
                      app:cardBackgroundColor="@color/blackgreen2"
                      app:cardCornerRadius="20dp"
                      app:cardElevation="10dp">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:gravity="center"
                          android:orientation="vertical">

                          <ImageButton
                              android:id="@+id/adminmanagesupporthelp"
                              android:layout_width="64dp"
                              android:layout_height="64dp"
                              android:layout_gravity="bottom|right"
                              android:background="@color/blackgreen2"
                              android:src="@drawable/white_helpdesk_icon_64px"
                              tools:ignore="SpeakableTextPresentCheck" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/nudista_bold"
                              android:text="Help"
                              android:textAlignment="center"
                              android:textColor="@color/white" />
                      </LinearLayout>
                  </android.support.v7.widget.CardView>


                  <!--
                         Horizontal.....................
                    -->

                  <!--
                                         Center.....................
                  -->
              </GridLayout>
          </FrameLayout>

        </FrameLayout>
</FrameLayout>
    </LinearLayout>
    <!--
         Navigation view to show the menu items
    -->

</android.support.v4.widget.DrawerLayout>