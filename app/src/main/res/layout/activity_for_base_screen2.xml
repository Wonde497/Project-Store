<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slash_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/darkyellow"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/blackgreen2"
            android:background ="@color/blackgreen2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                tools:ignore="ExtraText">

                <TextView
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register Merchant ID"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:fontFamily="@font/nudista_bold"
                    android:layout_marginBottom="15dp"

                    />

                <EditText
                    android:id="@+id/Tvregmerchantid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/edittextback"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/white_id_icon_64px"
                    android:drawablePadding="20dp"
                    android:hint="Enter merchant ID"
                    android:inputType="textNoSuggestions"
                    android:padding="17dp"
                    android:fontFamily="@font/panton_bold"
                    android:textSize="18sp" />


                <Button
                    android:id="@+id/idBtnregmerchantlid"
                    android:layout_width="120dp"
                    android:layout_height="53dp"
                    android:text="Register"
                    android:layout_gravity="center"
                    android:background="@drawable/yellowcorner_background"
                    android:textSize="20sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/blackgreen2"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>