<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Dark Green Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#295936" /> <!-- Dark Green -->
            <corners
                android:radius="20dp" /> <!-- Adjust the radius as needed for desired curvature -->
        </shape>
    </item>

    <!-- Dark Yellow Background -->
    <item android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#8B8000" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

</layer-list>
